@using Apprenticeship.Data.Entities


<link href="~/assets/extra-libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="~/css/form.css" />
<div class="col-12">
	<div class="card">
		<div class="card-body">

			<div class="table-responsive">
				<div class="rowDispaly">
					<h4 class="card-title">Companies Information</h4>
					<h4><a class="btn waves-effect waves-light btn-lg btn-rounded myBtn" asp-controller="Company" asp-action="Add">Add Company</a></h4>
				</div>
				<table id="zero_config" class="table table-striped table-bordered no-wrap">
					<thead>
						<tr>
							<th>Company Name</th>
							<th>Company Address</th>
							<th>Edit Company</th>
							<th>Delete Company</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var company in (List<Company>)(ViewBag.companies))
						{
							<tr>
								<td>@company.companyId</td>
								<td>@company.companyName</td>
								<td>@company.companyAddress</td>
								<td><a class="btn btn-success" href="/Company/Edit?companyId=@company.companyId">Edit</a></td>
								<td><a class="btn btn-danger" href="/Company/Delete?companyId=@company.companyId">Delete</a></td>
							</tr>
						}
					</tbody>
					<tfoot>
						<tr>
							<th>Company Name</th>
							<th>Company Address</th>
							<th>Edit Company</th>
							<th>Delete Company</th>
						</tr>
					</tfoot>
				</table>
			</div>
		</div>
	</div>
</div>
<script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/dist/js/app-style-switcher.js"></script>
<script src="~/assets/extra-libs/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/dist/js/pages/datatable/datatable-basic.init.js"></script>
