@using Apprenticeship.Data.Entities
<link href="~/assets/extra-libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="~/css/form.css" />
<div class="col-12">
	<div class="card">
		<div class="card-body">
			
			<div class="table-responsive">
				<div class="rowDispaly">
					<h4 class="card-title">Trainings Information</h4>
					<h4><a class="btn waves-effect waves-light btn-lg btn-rounded myBtn" asp-controller="Training" asp-action="Add">Add Training</a></h4>
				</div>
				<table id="zero_config" class="table table-striped table-bordered no-wrap">
					<thead>
						<tr>
							<th>Student Name</th>
							<th>School Supervisor Name</th>
							<th>Team Leader Name</th>
							<th>Start Date</th>
							<th>End Date</th>
							<th>Objectives</th>
							<th>Edit</th>
							<th>Delete</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var training in (List<Training>)(ViewBag.trainings))
						{
							<tr>
								<td>@training.student.fristName @training.student.lastName</td>
								<td>@training.schoolSupervisor.fristName @training.schoolSupervisor.lastName</td>
								<td>@training.teamLeader.fristName @training.teamLeader.lastName</td>
								<td>@training.startDate.ToString("yyyy-MM-dd")</td>
								<td>@training.endDate.ToString("yyyy-MM-dd")</td>
								<td>
									@foreach (var trainingObjective in training.trainingObjectives)
									{
										<span>@trainingObjective.objective.objectiveName</span>

										<br />
									}
								</td>
								<td><a class="btn btn-success" href="/Training/Edit?trainingId=@training.trainingId">Edit</a></td>
								<td><a class="btn btn-danger" href="/Training/Delete?trainingId=@training.trainingId">Delete</a></td>
							</tr>
						}
					</tbody>
					<tfoot>
						<tr>
							<th>Student Name</th>
							<th>School Supervisor Name</th>
							<th>Team Leader Name</th>
							<th>Start Date</th>
							<th>End Date</th>
							<th>Objectives</th>
							<th>Edit</th>
							<th>Delete</th>
						</tr>
					</tfoot>
				</table>
			</div>
		</div>
	</div>
</div>
<script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/dist/js/app-style-switcher.js"></script>
<script src="~/assets/extra-libs/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/dist/js/pages/datatable/datatable-basic.init.js"></script>