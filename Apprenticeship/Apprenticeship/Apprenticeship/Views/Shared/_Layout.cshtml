@using System.Security.Claims
@using Microsoft.Data.SqlClient
@{
    var connectionString = "Server=RANIA;Database=Apprenticeship;Trusted_Connection=True;TrustServerCertificate=True";
    string userDiscriminator = "";
    using (SqlConnection connection = new SqlConnection(connectionString))
    {
        connection.Open();

        var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;

        if (!string.IsNullOrEmpty(userId))
        {
            var query = "SELECT Discriminator FROM dbo.AspNetUsers WHERE Id = @UserId";

            using (SqlCommand cmd = new SqlCommand(query, connection))
            {
                cmd.Parameters.Add(new SqlParameter("@UserId", userId));
                var discriminator = cmd.ExecuteScalar();
                userDiscriminator = discriminator.ToString();
            }
        }
        if (userDiscriminator == "Person")
        {
            userDiscriminator = "Admin";
        }
    }
}
