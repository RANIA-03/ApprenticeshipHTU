@using Apprenticeship.Data.Entities
<link href="~/assets/extra-libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="~/css/form.css" />
<div class="col-12">
	<div class="card">
		<div class="card-body">

			<div class="table-responsive">
				<div class="rowDispaly">
					<h4 class="card-title">Students Information</h4>
					<h4><a class="btn waves-effect waves-light btn-lg btn-rounded myBtn" asp-controller="Student" asp-action="Add">Add Student</a></h4>
				</div>
				<table id="zero_config" class="table table-striped table-bordered no-wrap">
					<thead>
						<tr>
							<th>Name</th>
							<th>PhoneNumber</th>
							<th>Email</th>
							<th>Major</th>
							<th>School</th>
							<th>Edit</th>
							<th>Delete</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var student in (List<Student>)(ViewBag.students))
						{
							<tr>
								<td>@student.fristName @student.lastName</td>
								<td>@student.PhoneNumber</td>
								<td>@student.Email</td>
								<td>@student.studentMajor</td>
								<td>@student.school.schoolName</td>
								<td><a class="btn btn-success" href="/Student/Edit?Id=@student.Id">Edit</a></td>
								<td><a class="btn btn-danger" href="/Student/Delete?Id=@student.Id">Delete</a></td>
							</tr>
						}
					</tbody>
					<tfoot>
						<tr>
							<th>Name</th>
							<th>PhoneNumber</th>
							<th>Email</th>
							<th>Major</th>
							<th>School</th>
							<th>Edit</th>
							<th>Delete</th>
						</tr>
					</tfoot>
				</table>
			</div>
		</div>
	</div>
</div>
<script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/dist/js/app-style-switcher.js"></script>
<script src="~/assets/extra-libs/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/dist/js/pages/datatable/datatable-basic.init.js"></script>
