@using Apprenticeship.DTO
@using Apprenticeship.Data.Entities
@model SchoolDTO
<link rel="stylesheet" type="text/css" href="~/css/form.css" />
<div class="bigContainer">
    <div class="container-fluid mt-2">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-8 col-lg-8">
                <div class="card myContainer">
                    <div class="card-body">

                        <h2 style="text-align:center">Edit School.</h2>
                        <form method="post" action="/School/Edited?schoolId=@Model.schoolId" class="mt-5">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="schoolName">School Name</label>
                                <input asp-for="schoolName" aria-required="true" class="form-control my-input" value="@Model.schoolName">
                                <span asp-validation-for="schoolName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="schoolAddress">School Address</label>
                                <input asp-for="schoolAddress" aria-required="true" class="form-control my-input" value="@Model.schoolAddress">
                                <span asp-validation-for="schoolAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="shortName">School Short Name</label>
                                <input asp-for="shortName" aria-required="true" class="form-control my-input" value="@Model.shortName">
                                <span asp-validation-for="shortName" class="text-danger"></span>
                            </div>


                            <div class="form-group mb-4">
                                <button id="registerSubmit" type="submit" class="btn waves-effect waves-light btn-lg btn-rounded myBtn" style="width:100%">
                                    Edit
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
