@using Apprenticeship.DTO
@using Apprenticeship.Data.Entities
@model Objective

<div class="bigContainer">
    <div class="container-fluid mt-2">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-8 col-lg-8">
                <div class="card myContainer">
                    <div class="card-body">
                        <h2 style="text-align:center">Edit Objectives</h2>
                        <form method="post" action="/Objective/Edited?objectiveId=@Model.objectiveId" class="mt-5">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="objectiveName">Objective Name</label>
                                <input asp-for="objectiveName" aria-required="true" class="form-control my-input" value="@Model.objectiveName">
                                <span asp-validation-for="objectiveName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-4">
                                <button id="registerSubmit" type="submit" class="btn waves-effect waves-light btn-lg btn-rounded myBtn" style="width:100%">
                                    Edit
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>